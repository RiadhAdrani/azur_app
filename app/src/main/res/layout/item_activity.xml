<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/giant"
    android:layout_height="@dimen/giant"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="@dimen/epsilon"
    app:cardCornerRadius="8dp"
    android:background="@drawable/pic_inside"
    android:foreground="?android:attr/selectableItemBackground">

    <ImageView
        android:id="@+id/item_background"
        android:layout_width="match_parent"
        android:background="@drawable/pic_inside"
        android:layout_height="match_parent"
        android:contentDescription="@string/azur_city"/>

        <TextView
            android:id="@+id/item_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:maxLines="2"
            android:text="@string/azur_city"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="@dimen/text_tiny"
            android:paddingHorizontal="@dimen/tiny"
            android:paddingVertical="@dimen/tiny_extra"
            android:textAlignment="gravity"
            android:gravity="end|bottom"
            android:ellipsize="end"
            />


</androidx.cardview.widget.CardView>