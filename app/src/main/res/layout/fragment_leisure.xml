<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/tiny_extra">

    <ImageView
        android:id="@+id/under_construction_icon"
        android:layout_width="@dimen/bigger_extra"
        android:layout_height="@dimen/bigger_extra"
        android:src="@drawable/ic_construction"
        app:layout_constraintBottom_toTopOf="@id/under_construction_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginVertical="@dimen/small"
        app:tint="@color/azur_dark"
        android:contentDescription="@string/under_construction" />

    <TextView
        android:id="@+id/under_construction_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/under_construction"
        android:textColor="@color/azur"
        android:textSize="@dimen/text_big"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/under_construction_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/check_later"
        android:textColor="@color/azur_darker"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/under_construction_text"
        android:layout_marginVertical="@dimen/small"
        />


</androidx.constraintlayout.widget.ConstraintLayout>