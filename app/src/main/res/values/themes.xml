<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AzurApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/azur</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#00ACC8</item>
        <!-- Customize your theme here. -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="fontFamily">@font/open_sans</item>
    </style>

    <style name="fragment_store_text">
        <item name="android:paddingTop">@dimen/tiny_extra</item>
        <item name="android:paddingBottom">@dimen/tiny_extra</item>
        <item name="android:layout_marginEnd">@dimen/medium</item>
        <item name="singleLine">true</item>
        <item name="android:textColor">@color/azur_dark</item>
        <item name="android:textStyle">italic|bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/text_tiny</item>
    </style>

    <style name="fragment_store_icons">
        <item name="tint">@color/azur</item>
    </style>

    <style name="fragment_store_description">
        <item name="android:paddingTop">@dimen/tiny</item>
        <item name="android:paddingBottom">@dimen/tiny</item>
        <item name="paddingStart">@dimen/tiny</item>
        <item name="paddingEnd">@dimen/tiny</item>
        <item name="singleLine">true</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColor">@color/azur_darker</item>
    </style>
</resources>